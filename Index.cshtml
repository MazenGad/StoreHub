@model IEnumerable<Domain.Entities.Place>

@{
    ViewBag.Title = "الأماكن المعلقة";
    Layout = "_Layout";
}

<div class="card-box">

    <!-- -------------------------------------------------------------------------------------------------- -->
    <h2 class="header-title m-t-0 m-b-30">الأماكن المعلقة</h2>

    <table id="viewDatatable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
        <thead style="text-align:center">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    الاسم
                </th>
                <th>
                    رقم الجوال
                </th>
                <th>
                    القسم
                </th>
                <th style="text-align:center">
                    العنوان
                </th>
                <th style="text-align: center">
                    الصور
                </th>
                <th style="text-align: center">
                    Comments
                </th>
                <th style="text-align: center">
                    العروض
                </th>
                <th style="text-align: center">
                    المستخدمين
                </th>
                <th>
                    الوقت
                </th>
                <th>
                    الصورة الشخصية
                </th>                
                <th>
                    سعر المميز
                </th>                
                <th>
                    الحالة
                </th>
                <th>
                    تغيير الحالة
                </th>
                <th>
                    حذف
                </th>

            </tr>
        </thead>      
     
    </table>


</div>






<!-- Modal Images -->
<div class="modal fade" id="exampleModalCenter22" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle" style="text-align:center;color:blue;font-size:20px">الصور</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body addImages" id="addImages" style="display:flex;flex-wrap: wrap; justify-content:center;">


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">اغلاق</button>

            </div>
        </div>
    </div>
</div>




<!-- Modal SuggestedProviders -->
<div class="modal fade" id="CommentDelegateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle" style="text-align:center;color:blue;font-size:20px">الاحجام</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body CommentDelegate" id="CommentDelegate" style="display:flex;flex-wrap: wrap; justify-content:center;">
                <div id="SuggestedProvidersP">

                </div>
                <table class="table table-striped" id="CommentDelegateTable">
                    <thead style="text-align: center">
                        <tr>
                            <th style="text-align: center">الكومنت </th>
                            <th style="text-align: center">التاريخ</th>
                        </tr>
                    </thead>
                    <tbody id="CommentDelegateTableBody" style="text-align: center">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">اغلاق</button>

            </div>
        </div>
    </div>
</div>

<!-- Modal SuggestedProviders -->
<div class="modal fade" id="OfferDelegateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle" style="text-align:center;color:blue;font-size:20px">الاحجام</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body OfferDelegate" id="OfferDelegate" style="display:flex;flex-wrap: wrap; justify-content:center;">
                <div id="SuggestedProvidersP">

                </div>
                <table class="table table-striped" id="OfferDelegateTable">
                    <thead style="text-align: center">
                        <tr>
                            <th style="text-align: center">العنوان </th>
                            <th style="text-align: center">الصورة</th>
                            <th style="text-align: center">المدة</th>
                            <th style="text-align: center">مقدم الخدمة</th>
                        </tr>
                    </thead>
                    <tbody id="OfferDelegateTableBody" style="text-align: center">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">اغلاق</button>

            </div>
        </div>
    </div>
</div>

<!-- Modal ProvidersUsers -->
<div class="modal fade" id="UsersModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle" style="text-align:center;color:blue;font-size:20px">المستخدمين</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                <div class="modal-body OfferDelegate" id="OfferDelegate" style="display:flex;flex-wrap: wrap; justify-content:center;">
                    <div id="ProvidersUsersContainer">
                    </div>
                
                </div>
                <div id="submitBt" class="modal-footer">

                </div>
        </div>
    </div>
</div>

<!-- Modal SpecialProviders -->
<div class="modal fade" id="SpecialModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle" style="text-align:center;color:blue;font-size:20px">سعر التمييز</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body OfferDelegate" id="OfferDelegate" style="display:flex;flex-wrap: wrap; justify-content:center;">
                <div id="inputPrice">                    
                </div>
                
            </div>
            <div id="SpecialBtn" class="modal-footer">                
            </div>
        </div>
    </div>
</div>


@section scripts{
    @* script for creating table by datatable*@
    <script src="~/js/dataTable/HoldProvidersDatatable.js"></script>    
    
}